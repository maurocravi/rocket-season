<section id="season-info" class="py-12 w-full">
    <div class="glass-panel p-8 md:p-12 relative overflow-hidden">
        <!-- Glow Effect -->
        <div
            class="absolute top-0 right-0 w-64 h-64 bg-rocket-blue/10 rounded-full blur-[80px]"
        >
        </div>

        <h3
            class="text-3xl md:text-4xl font-display font-bold text-white mb-8 text-left border-l-4 border-rocket-blue pl-4"
        >
            SEASON 21 <span class="text-rocket-blue">DETAILS</span>
        </h3>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Dates -->
            <div class="space-y-6">
                <div>
                    <h4
                        class="text-rocket-orange font-display font-bold text-xl mb-2"
                    >
                        START DATE
                    </h4>
                    <p class="text-slate-300 text-lg">December 11, 2025</p>
                </div>
                <div>
                    <h4
                        class="text-rocket-orange font-display font-bold text-xl mb-2"
                    >
                        END DATE
                    </h4>
                    <p class="text-slate-300 text-lg">March 11, 2026</p>
                    <p class="text-xs text-slate-500 mt-1">
                        *Dates are subject to change by Psyonix
                    </p>
                </div>
            </div>

            <!-- Rewards Preview -->
            <div>
                <h4
                    class="text-rocket-blue font-display font-bold text-xl mb-4"
                >
                    SEASON REWARDS
                </h4>
                <div
                    class="bg-slate-900/50 rounded-lg p-6 border border-white/5"
                >
                    <p class="text-slate-300 mb-4">
                        Season 21 rewards have not been officially announced
                        yet.
                    </p>

                    <div
                        class="flex items-center space-x-2 text-sm text-slate-400"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5 text-rocket-orange"
                            viewBox="0 0 20 20"
                            fill="currentColor"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                                clip-rule="evenodd"></path>
                        </svg>
                        <span>Check back later for updates!</span>
                    </div>

                    <!-- Placeholder for reward icons -->
                    <div class="grid grid-cols-4 gap-2 mt-6 opacity-30">
                        <div
                            class="aspect-square bg-slate-700 rounded animate-pulse"
                        >
                        </div>
                        <div
                            class="aspect-square bg-slate-700 rounded animate-pulse"
                        >
                        </div>
                        <div
                            class="aspect-square bg-slate-700 rounded animate-pulse"
                        >
                        </div>
                        <div
                            class="aspect-square bg-slate-700 rounded animate-pulse"
                        >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
